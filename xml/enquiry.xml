<div class="Main-Wrapper">
	<section>
		<h1 class="heading-style">Enquiry</h1>
		<form class="Form-wrapper">
				<label class="form-style move-left">First Name:<br/>
					<input type="text" name="first-name" maxlength="25" size="25" pattern="^[a-zA-Z]+$" required="required"/>
				</label>


				<label class="form-style move-right">Last Name:<br/>
					<input type="text" name="last-name"  maxlength="25" size="25" pattern="^[a-zA-Z]+$" required="required"/>
				</label>

				<label class="form-style move-left">Email Address:<br/>
					<input type="email" name="Email" required="required"/>
				</label><br/>

				<label class="form-style move-right">Phone Number:<br/>
					<input type="tel" name="Phone-num" placeholder="000-123456" pattern="[0-9]{3}-[0-9]{6}" maxlength="10" minlength="10" required="required"/>
				</label>
					
				<label class="form-style move-left">Product:<br/>
					<select name="Product">
						<option value="" selected="selected" disabled="disabled" hidden="hidden">--SELECT--</option>
						<option>4X4</option>
						<option>SMALL CAR</option>
						<option>SEDANS</option>
					</select>
				</label>

				<label class="form-style move-right">Rental Duration:<br/>
					<input type="number" name="Rental-duration" required="required"/>
				</label>

			<fieldset class="fieldset-wrapper">
				<LEGEND>Address</LEGEND>
										
					<label>Streat address:<br/>
						<input type="text" name="street-address" maxlength="40" required="required"/>
					</label><br/><br/>

					<label class="label-padding">City/town:<br/>
						<input type="text" name="city" maxlength="20" required="required"/>
					</label><br/><br/>


					<label class="label-padding">State:<br/></label>

					<select name="state" id="select" class="Input-size">
						<option value="" selected="selected" disabled="disabled" hidden="hidden">--SELECT--</option>
						<option value="Johor">Johor</option>
						<option value="Kedah">Kedah</option>
						<option value="Kelantan">Kelantan</option>
						<option value="Kuala Lumpur">Kuala Lumpur</option>
						<option value="Labuan">Labuan</option>
						<option value="Malacca">Malacca</option>
						<option value="Negeri Sembilan">Negeri Sembilan</option>
						<option value="Pahang">Pahang</option>
						<option value="Penang">Penang</option>
						<option value="Perak">Perak</option>
						<option value="Perlis">Perlis</option>
						<option value="Putrajaya">Putrajaya</option>
						<option value="Sabah">Sabah</option>
						<option value="Sarawak">Sarawak</option>
						<option value="Selangor">Selangor</option>
						<option value="Terengganu">Terengganu</option>
					</select><br/><br/>

					<label class="label-padding">Postcode:<br/>
						<input type="text" name="postcode" pattern="[0-9]{5}" maxlength="5" minlength="5" required="required"/>
					</label><br/>
			</fieldset>
			
			<label>Comment:<br/>
				<textarea name="Comment" rows="10"></textarea>
			</label><br/>

			<div id="Btn-style">
				<input type="submit" name="submitbtn"/>
			</div>		
		</form>
	</section>
</div>
